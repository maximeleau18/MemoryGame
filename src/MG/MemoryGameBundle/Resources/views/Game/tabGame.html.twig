{% extends 'MGMemoryGameBundle:Game:myGame.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/mgmemorygame/js/launchAjax.js') }}"></script>
{% endblock %}

{% block game %}	

<div id="myGameBoard">

{% if app.session.get('game_started') is not empty %}
	<table id="tab_cards" cellpadding="0" cellspacing="0">	
		<tr>
			{% for tr in app.session.get('game_tab') %}			
				{% for td in tr %}
					<td>
					{% if td.locked %}
						<img src="{{ asset('bundles/mgmemorygame/images/') }}{{ td.imgName }}.png" alt="" />
					{% else %}
						{% if td.visible %}
								<button class="card_button" onclick="checkCard({{ td.id }})">
									<img src="{{ asset('bundles/mgmemorygame/images/') }}{{ td.imgName }}.png" alt="" />
								</button>
						{% else %}
								<button class="card_button" onclick="checkCard({{ td.id }})">
									<img src="{{ asset('bundles/mgmemorygame/images/hidden_2.gif') }}" alt="" />
								</button>
						{% endif %}
					{% endif %}
					</td>			
				{% endfor %}
				</tr>
			{% endfor %}
		</tr>				
	</table>
{% endif %}
</div>

{% endblock %}